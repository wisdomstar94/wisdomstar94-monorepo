{
  "name": "@wisdomstar94/next-utils",
  "version": "0.0.3",
  "license": "MIT",
  "scripts": {
    "ncu:update": "ncu -u --dep \"prod\",\"dev\",\"optional\",\"packageManager\",\"peer\"",
    "pack:build": "vite build && tsc",
    "npm:publish": "npm publish --access=public",
    "del:dist": "del-cli ./dist",
    "del:node_modules": "del-cli ./node_modules",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "jose": "^6.0.11",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "set-cookie-parser": "^2.7.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/set-cookie-parser": "^2.4.10",
    "@vitejs/plugin-react": "^4.5.2",
    "@wisdomstar94/tsconfig-library": "workspace:^",
    "jose": "^6.0.11",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "set-cookie-parser": "^2.7.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "files": [
    "package.json",
    "dist/*",
    "!dist/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  }
}
